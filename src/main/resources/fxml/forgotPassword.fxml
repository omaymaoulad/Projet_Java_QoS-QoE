<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ensah.qoe.Controller.ForgotPasswordController"
      alignment="CENTER"
      spacing="0"
      style="-fx-background-color: #f5f7fa;"
      prefWidth="500"
      prefHeight="600">

    <!-- Header -->
    <HBox alignment="CENTER" style="-fx-background-color: #2c3e50;" VBox.vgrow="NEVER">
        <padding>
            <Insets top="20" bottom="20"/>
        </padding>
        <Label text="QoE System" style="-fx-text-fill: white; -fx-font-weight: bold;">
            <font>
                <Font size="24"/>
            </font>
        </Label>
    </HBox>

    <!-- Contenu principal -->
    <VBox alignment="CENTER" spacing="30" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Carte principale -->
        <VBox alignment="CENTER" spacing="25" maxWidth="420"
              style="-fx-background-color: white;
                     -fx-background-radius: 15;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 20, 0, 0, 4);
                     -fx-border-color: #e0e0e0;
                     -fx-border-width: 1;
                     -fx-border-radius: 15;">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Titre -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="ðŸ”" style="-fx-font-size: 48px;"/>
                <Label text="Mot de passe oubliÃ©" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                    <font>
                        <Font size="22"/>
                    </font>
                </Label>
            </VBox>

            <!-- Instructions -->
            <Label text="Entrez votre adresse email pour recevoir un lien de rÃ©initialisation"
                   style="-fx-text-fill: #7f8c8d; -fx-text-alignment: center;"
                   wrapText="true"
                   maxWidth="350">
                <font>
                    <Font size="13"/>
                </font>
            </Label>

            <!-- Messages -->
            <VBox fx:id="messagesContainer" spacing="10">
                <Label fx:id="errorLabel"
                       style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"
                       wrapText="true"
                       maxWidth="350"/>
                <Label fx:id="successLabel"
                       style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"
                       wrapText="true"
                       maxWidth="350"/>
            </VBox>

            <!-- Champ Email -->
            <VBox spacing="8">
                <Label text="Adresse email" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                    <font>
                        <Font size="13"/>
                    </font>
                </Label>
                <TextField fx:id="emailField"
                           promptText="exemple@email.com"
                           style="-fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #bdc3c7;
                                  -fx-border-width: 1.5;
                                  -fx-padding: 12;
                                  -fx-font-size: 14px;"/>
            </VBox>

            <!-- Indicateur de progression -->
            <ProgressIndicator fx:id="progressIndicator" visible="false"/>

            <!-- Boutons -->
            <VBox spacing="15">
                <Button fx:id="resetButton"
                        text="Envoyer le lien"
                        onAction="#handleResetPassword"
                        maxWidth="Infinity"
                        style="-fx-background-color: #3498db;
                               -fx-text-fill: white;
                               -fx-background-radius: 8;
                               -fx-font-weight: bold;
                               -fx-padding: 14;
                               -fx-cursor: hand;
                               -fx-font-size: 14px;">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Hyperlink fx:id="backLink"
                           text="â† Retour Ã  la connexion"
                           onAction="#handleBackToLogin"
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px; -fx-cursor: hand;"
                           alignment="CENTER"/>
            </VBox>
        </VBox>
    </VBox>
</VBox>