<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ensah.qoe.Controller.ResetPasswordController"
            prefWidth="400" prefHeight="250">

    <Label text="Réinitialiser le mot de passe" layoutX="80" layoutY="30" style="-fx-font-size: 18px;"/>

    <Label text="Nouveau mot de passe:" layoutX="20" layoutY="80"/>
    <PasswordField fx:id="passwordField" layoutX="180" layoutY="75" prefWidth="200"/>

    <Button text="Réinitialiser" layoutX="150" layoutY="150" onAction="#handleResetPassword"/>
</AnchorPane>
