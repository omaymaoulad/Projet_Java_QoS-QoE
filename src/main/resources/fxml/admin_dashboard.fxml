                                <Rectangle width="30" height="90" fill="#e67e22" arcWidth="5" arcHeight="5"/>
                                <Label text="6" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Column - Additional Metrics -->
                <VBox spacing="15" prefWidth="300">
                    <!-- Session Duration -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
