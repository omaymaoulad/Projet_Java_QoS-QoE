                            <Circle radius="50" stroke="#ecf0f1" strokeWidth="10" fill="transparent"/>
                            <Circle radius="50" stroke="#e67e22" strokeWidth="10" fill="transparent"
                                    strokeDashOffset="235.6" strokeLineCap="ROUND">
                                <strokeDashArray>
                                    <Double fx:value="165.0"/>
                                    <Double fx:value="70.6"/>
                                </strokeDashArray>
                            </Circle>
                            <Label text="66%" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                        </StackPane>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>