<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.Cursor?>
<?import java.lang.Double?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ensah.qoe.Controller.AdminDashboardController"
            minWidth="600.0" minHeight="500.0"
            prefHeight="650.0" prefWidth="1200.0"
            style="-fx-background-color: #f8f9fa;">

    <!-- Layout principal -->
    <HBox spacing="0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Content Area -->
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f9fa;" HBox.hgrow="ALWAYS">

            <!-- Header -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Quality of Experience Dashboard"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”„ Refresh" onAction="#refreshDashboard"
                        style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 5; -fx-padding: 8 16; -fx-cursor: hand;"/>
            </HBox>

            <!-- Statistics Cards Row 1 -->
            <HBox spacing="15">
                <!-- QoE Score Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      prefWidth="280">
                    <Label text="Overall QoE Score" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="overallQoeScoreLabel" text="0.0"
                               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label fx:id="overallQoeChangeLabel" text="+0.0"
                               style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label fx:id="overallQoePreviousLabel" text="Previous period: 0.0"
                           style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                </VBox>

                <!-- Network Performance -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      prefWidth="280">
                    <Label text="Network Performance" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="networkPerformanceLabel" text="0%"
                               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label fx:id="networkChangeLabel" text="+0%"
                               style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label fx:id="networkPreviousLabel" text="Previous period: 0%"
                           style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                </VBox>

                <!-- User Satisfaction -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      prefWidth="280">
                    <Label text="User Satisfaction" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="userSatisfactionLabel" text="0%"
                               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label fx:id="satisfactionChangeLabel" text="+0%"
                               style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label fx:id="satisfactionPreviousLabel" text="Previous period: 0%"
                           style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                </VBox>
            </HBox>

            <!-- Charts and Metrics Row -->
            <HBox spacing="15" VBox.vgrow="ALWAYS">
                <!-- Left Column - Charts -->
                <VBox spacing="15" prefWidth="600">
                    <!-- Service Quality Metrics -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Service Quality Metrics" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <HBox spacing="30" style="-fx-padding: 15 0 0 0;">
                            <VBox spacing="10">
                                <Label text="Video Streaming" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="videoStreamingLabel" text="0%"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                            </VBox>
                            <VBox spacing="10">
                                <Label text="Voice Calls" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="voiceCallsLabel" text="0%"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                            </VBox>
                            <VBox spacing="10">
                                <Label text="Gaming" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="gamingLabel" text="0%"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Performance Over Time -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                          VBox.vgrow="ALWAYS">
                        <Label text="Performance Over Time (Last 7 Days)"
                               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"/>
                        <HBox fx:id="performanceChartContainer" alignment="CENTER" spacing="20"
                              style="-fx-padding: 20 0 0 0; -fx-min-height: 200;">
                            <!-- Les barres seront ajoutÃ©es dynamiquement -->
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Column - Additional Metrics -->
                <VBox spacing="15" prefWidth="300">
                    <!-- Session Duration -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Average Session Duration" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 0 0 0;">
                            <Label fx:id="sessionDurationLabel" text="0:00"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                            <Label fx:id="sessionChangeLabel" text="+0:00"
                                   style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>

                    <!-- Error Rate -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Error Rate" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 0 0 0;">
                            <Label fx:id="errorRateLabel" text="0%"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>
                            <Label fx:id="errorChangeLabel" text="+0%"
                                   style="-fx-text-fill: #c0392b; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>

                    <!-- System Efficiency -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                          VBox.vgrow="ALWAYS">
                        <Label text="System Efficiency"
                               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"/>
                        <StackPane fx:id="efficiencyCircleContainer" style="-fx-padding: 20 0 0 0;">
                            <!-- Le cercle sera ajoutÃ© dynamiquement -->
                            <Circle radius="50" stroke="#ecf0f1" strokeWidth="10" fill="transparent"/>
                            <Label fx:id="systemEfficiencyLabel" text="0%"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                        </StackPane>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>