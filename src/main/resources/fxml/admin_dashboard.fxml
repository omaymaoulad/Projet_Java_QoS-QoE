<?import javafx.scene.Cursor?>
<?import java.lang.Double?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ensah.qoe.Controller.AdminDashboardController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #f8f9fa;">

    <!-- Layout principal -->
    <HBox spacing="0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Sidebar Menu - Orange foncÃ© -->
        <VBox spacing="0" prefWidth="250" style="-fx-background-color: #d35400; -fx-padding: 20 0 20 0;">

            <!-- Logo et titre -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 30 0;">
                <Rectangle width="40" height="40" arcWidth="10" arcHeight="10"
                           fill="linear-gradient(to bottom right, #e67e22, #d35400)"/>
                <Label text="QoE System" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;"/>
            </VBox>

            <!-- Menu navigation -->
            <VBox spacing="5" style="-fx-padding: 0 15 0 15;">
                <!-- Dashboard -->
                <Button text="ðŸ“Š Dashboard"
                        style="-fx-background-color: transparent; -fx-text-fill: #fef5e7; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 12 15; -fx-border-radius: 5;"
                        onAction="#showDashboard">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>

                <!-- QoE Management -->
                <Button text="ðŸŽ¯ QoE Analysis"
                        style="-fx-background-color: transparent; -fx-text-fill: #fef5e7; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 12 15; -fx-border-radius: 5;"
                        onAction="#showQoEAnalysis">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>

                <!-- QoS Management -->
                <Button text="âš¡ QoS Metrics"
                        style="-fx-background-color: transparent; -fx-text-fill: #fef5e7; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 12 15; -fx-border-radius: 5;"
                        onAction="#showQoSMetrics">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>

                <!-- Network Monitoring -->
                <Button text="ðŸŒ Network Monitor"
                        style="-fx-background-color: transparent; -fx-text-fill: #fef5e7; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 12 15; -fx-border-radius: 5;"
                        onAction="#showNetworkMonitor">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>

                <!-- User Management -->
                <Button text="ðŸ‘¥ User Management"
                        style="-fx-background-color: transparent; -fx-text-fill: #fef5e7; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 12 15; -fx-border-radius: 5;"
                        onAction="#showUserManagement">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>

                <!-- Reports -->
                <Button text="ðŸ“ˆ Reports et Analytics"
                        style="-fx-background-color: transparent; -fx-text-fill: #fef5e7; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 12 15; -fx-border-radius: 5;"
                        onAction="#showReports">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>

                <!-- System Settings -->
                <Button text="âš™ï¸ System Settings"
                        style="-fx-background-color: transparent; -fx-text-fill: #fef5e7; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 12 15; -fx-border-radius: 5;"
                        onAction="#showSystemSettings">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>
            </VBox>

            <!-- Espace flexible -->
            <VBox VBox.vgrow="ALWAYS"/>

            <!-- User section -->
            <VBox spacing="10" style="-fx-padding: 20 15 0 15; -fx-border-color: #e67e22; -fx-border-width: 1 0 0 0;">
                <Label fx:id="usernameLabel" text="Administrator"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="ðŸšª Logout"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;"
                        onAction="#handleLogout">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>
            </VBox>
        </VBox>

        <!-- Content Area -->
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f9fa;" HBox.hgrow="ALWAYS">

            <!-- Header -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Quality of Experience Dashboard"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <ComboBox promptText="1 October â€“ 7 October"
                          style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </HBox>

            <!-- Statistics Cards Row 1 -->
            <HBox spacing="15">
                <!-- QoE Score Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      prefWidth="280">
                    <Label text="Overall QoE Score" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="4.2" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="+0.3" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label text="Previous period: 3.9" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                </VBox>

                <!-- Network Performance -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      prefWidth="280">
                    <Label text="Network Performance" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="86%" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="+5%" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label text="Previous period: 81%" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                </VBox>

                <!-- User Satisfaction -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      prefWidth="280">
                    <Label text="User Satisfaction" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="78%" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="+12%" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label text="Previous period: 66%" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                </VBox>
            </HBox>

            <!-- Charts and Metrics Row -->
            <HBox spacing="15" VBox.vgrow="ALWAYS">
                <!-- Left Column - Charts -->
                <VBox spacing="15" prefWidth="600">
                    <!-- Service Quality Metrics -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Service Quality Metrics" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <HBox spacing="30" style="-fx-padding: 15 0 0 0;">
                            <VBox spacing="10">
                                <Label text="Video Streaming" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label text="64%" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                            </VBox>
                            <VBox spacing="10">
                                <Label text="Voice Calls" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label text="48%" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                            </VBox>
                            <VBox spacing="10">
                                <Label text="Gaming" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label text="26%" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Performance Over Time -->
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                          VBox.vgrow="ALWAYS">
                        <Label text="Performance Over Time (Days)" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
                            <VBox alignment="CENTER" spacing="5">
                                <Rectangle width="30" height="80" fill="#e67e22" arcWidth="5" arcHeight="5"/>
                                <Label text="1" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <Rectangle width="30" height="120" fill="#e67e22" arcWidth="5" arcHeight="5"/>
                                <Label text="2" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <Rectangle width="30" height="150" fill="#e67e22" arcWidth="5" arcHeight="5"/>
                                <Label text="3" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <Rectangle width="30" height="100" fill="#e67e22" arcWidth="5" arcHeight="5"/>
                                <Label text="4" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <Rectangle width="30" height="130" fill="#e67e22" arcWidth="5" arcHeight="5"/>
                                <Label text="5" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                            </VBox>
